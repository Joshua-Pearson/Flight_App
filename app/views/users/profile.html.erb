<!-- displays notice when flight created sucessfully -->
<h2><%= flash[:notice] %></h2>

<!-- new contact form -->
<div id="add_contact_form">
	<%= form_for @contact do |f| %>
	  <%= f.label "First Name:" %>
	  <%= f.text_field "first_name", placeholder: "Mickey" %>
	  <%= f.label "Last Name:" %>
	  <%= f.text_field "last_name", placeholder: "Mouse" %>
	  <%= f.label "Email:" %>
	  <%= f.text_field "email", placeholder: "mickey@mouse.com" %>
	  <%= f.label "Phone Number:" %>
	  <%= f.telephone_field "phone", placeholder: "(555)555-1212" %>
	 	<div class="submit">
  		<%= f.submit class: 'btn btn-success btn-sm rounded', id: "contactButton" %>
    </div>
	<% end %>
</div>



<!-- displays a list of all contacts for current user -->
<div class="panel panel-primary" id="contacts_list">
	<div class="panel-heading" id="contacts_list">Your Contacts:</div>
		<% @contacts.each do |contact| %>
			<%= contact.first_name %></br>
		<% end %>
</div>


<!-- displays a list of all flights for current user -->
<div class="panel panel-primary" id="flights_list">
	<div class="panel-heading">Your Flights:</div>
		<div class="panel-body><% @flights.each do |flight| %>
			<%= flight.airline_name -%> :
			<%= flight.flight_number -%> -
			<%= flight.date_month -%> /
			<%= flight.date_day -%>/
			<%= flight.date_year -%>, 
			<%= flight.departure_airport -%> to 
			<%= flight.arrival_airport -%></br>
		<% end %>
	</div>
</div>




